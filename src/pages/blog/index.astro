---
import { getCollection } from "astro:content";
import IndexLayout from "../../layouts/IndexLayout.astro";
import { formatDate } from "../../utils/formatDate";
const posts = await getCollection("blog");
---

<IndexLayout>
    {
        posts.map((post: any) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg px-6 pb-6 pt-2 ring-1 ring-slate-900/5 shadow-xl ">
                <div class="mt-3">
                    <a
                        rel="noopener noreferrer"
                        href={`blog/` + post.slug}
                        class="text-2xl font-bold hover:underline"
                    >
                        {post.data.title}
                    </a>
                    <p class="text-slate-500 dark:text-slate-400 mt-2 text-sm tracking-tight">
                        {post.data.description}
                    </p>
                </div>
                <div class="flex items-center justify-between mt-4">
                    <a
                        rel="noopener noreferrer"
                        href={`blog/` + post.slug}
                        class="flex mt-6 text-white bg-blue-500 border-0 py-2 px-5 focus:outline-none hover:bg-blue-600 rounded"
                    >
                        Read more
                    </a>
                    <div>
                        {/* <a rel="noopener noreferrer" href="#" class="flex items-center">
                    <img
                        src="https://source.unsplash.com/50x50/?portrait"
                        alt="avatar"
                        class="object-cover w-10 h-10 mx-4 rounded-full bg-gray-500 dark:bg-gray-500 bg-gray-500 dark:bg-gray-500"
                    />
                    <span
                        class="hover:underline text-gray-400 dark:text-gray-600 text-gray-400 dark:text-gray-600"
                    >
                        Leroy Jenkins
                    </span>
                </a> */}

                        <span class="text-sm text-gray-400 dark:text-gray-600 text-gray-400 dark:text-gray-600">
                            {formatDate(post.data.date)}
                        </span>
                    </div>
                </div>
            </div>
        ))
    }
</IndexLayout>
