---
import { getCollection } from "astro:content";
const posts = await getCollection("blog");
---

<html>
    <body>
        <h1>Blog</h1>
        {
            posts.map((post:any) => (
                <a href={`blog/`+post.slug}>
                    <h2>{post.data.title}</h2>
                    <p>{post.data.date}</p>
                </a>
            ))
        }
    </body>
</html>
