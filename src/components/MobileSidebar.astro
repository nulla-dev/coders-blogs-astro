<button
    type="button"
    id="aside-btn"
    class="header-btn"
    title="Open Aside Bar"
    aria-label="auto"
    aria-live="polite"
>
    <i class="ri-user-line"></i>
</button>
<button
    type="button"
    id="aside-close-btn"
    class="header-btn hidden"
    title="Close Aside Bar"
    aria-label="auto"
    aria-live="polite"
>
    <i class="ri-close-fill"></i>
</button>

<div
    id="blog-aside"
    class="absolute top-16 bg-skin-fill right-0 blog-aside hidden"
>
</div>

<script>
    let showAsideBtn: any = document.getElementById("aside-btn");
    let closeAsideBtn = document.getElementById("aside-close-btn");
    let menuIcon = document.getElementById("menu-icon");
    let menuCloseIcon: any = document.getElementById("menu-icon-close");
    let menu: any = document.getElementById("mobile-menu");

    let personalInfo = document.getElementById("personal-info");
    showAsideBtn.addEventListener("click", () => {
        if (menuIcon && menuIcon.classList.contains("hidden")) {
            menuIcon.classList.toggle("hidden");
            menuCloseIcon.classList.toggle("hidden");
            menu.classList.toggle("hidden");
        }
        showAsideBtn.classList.toggle("hidden");
        closeAsideBtn.classList.toggle("hidden");
        personalInfo.classList.toggle("hidden");
    });
    closeAsideBtn.addEventListener("click", () => {
        closeAsideBtn.classList.toggle("hidden");
        personalInfo.classList.toggle("hidden");
        showAsideBtn.classList.toggle("hidden");
    });
</script>
